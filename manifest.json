{
	"manifest_version": 2,

	"name": "Voting assistant for Bugzilla",
	"description": "Check if the GitHub profile you are visiting, follows you or not in a Twitter-like UI",
	"short_name": "Voting Bugzilla",
	"version": "0.0.1",
	"author": "Kuba Niewiarowski",
	// "homepage_url": "https://github.com/mkstn/follow-me-or-not",

	// "icons": {
	// 	"256": "assets/images/icon.png"
	// },

	"permissions": [
		"*://bugzilla.mozilla.org/*"
	],

	"content_scripts": [
		{
			"matches": [
				"*://bugzilla.mozilla.org/*"
			],
			"js": [
				"js/jquery-3.2.1.min.js",
				"js/bugzilla-voting-assistance.js"
			]
		}
	]
}
